package QuiZzoInc;

public class Alternativa {
	private String idAlternativa;
	private String[][] alternativas = {
										{"A","AA","AAA","AAAA"},
										{"A","AA","AAA","AAAA"},
										{"A","AA","AAA","AAAA"},
										{"A","AA","AAA","AAAA"},
										{"A","AA","AAA","AAAA"},
									  };
	private char[] respostas =          {
										'A',
										'B',
										'C',
										'A',
										'D',
									  };
	
	
/*--------------------------------------------------DECLARATION----------------------------------------------------*/
	char tentativa;
	char resposta;
	int index;
	int tentativaCorreta;
	
/*-----------------------------------------------------METODO CONSTRUTOR INICIO------------------------------------------------------------------------------------------------------------------*/
	public Alternativa() {
		
	}	
	
/*-----------------------------------------------------METODOS GET INICIO------------------------------------------------------------------------------------------------------------------------*/
	public String getIdAlternativa() {
		return idAlternativa;
	}

	public String[][] getAlternativas() {
		return alternativas;
	}

	public char[] getRespostas() {
		return respostas;
	}

	public char getTentativa() {
		return tentativa;
	}

	public char getResposta() {
		return resposta;
	}

	public int getIndex() {
		return index;
	}

	public int getTentativaCorreta() {
		return tentativaCorreta;
	}	
	
/*-----------------------------------------------------METODOS SET INICIO------------------------------------------------------------------------------------------------------------------------*/
	public void setIdAlternativa(String idAlternativa) {
		this.idAlternativa = idAlternativa;
	}

	public void setAlternativas(String[][] alternativas) {
		this.alternativas = alternativas;
	}

	public void setRespostas(char[] respostas) {
		this.respostas = respostas;
	}

	public void setTentativa(char tentativa) {
		this.tentativa = tentativa;
	}

	public void setResposta(char resposta) {
		this.resposta = resposta;
	}

	public void setIndex(int index) {
		this.index = index;
	}

	public void setTentativaCorreta(int tentativaCorreta) {
		this.tentativaCorreta = tentativaCorreta;
	}
	
}
