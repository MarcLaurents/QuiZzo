		bP1.setVisible(true);
		bP1.setBorder(BorderFactory.createLineBorder(new Color(219, 245, 240), 3, true));
		bP1.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent botAction) {				
				opcaoPersonagem = 0;
				countPersonagem++;
				
			}
		});
		/*---------------KATALINA---------------*/
		bP2.setBounds(420, 400, 150, 50);
