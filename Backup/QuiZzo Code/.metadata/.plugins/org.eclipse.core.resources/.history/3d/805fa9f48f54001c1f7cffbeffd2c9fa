		bP1.setFocusable(false);
		bP1.setText("Fio Germi");
		ImageIcon fotoP1 = new ImageIcon("C:\\Users\\marce\\OneDrive\\Área de Trabalho\\QuiZzo\\Backup\\QuiZzo Code\\QuiZzo\\FotoPersonagens\\Fio_Germi.png");
