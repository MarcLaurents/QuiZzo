package QuiZzoInc;

import java.util.ArrayList;

public class Personagem {
	private String idPersonagem;
	private String nomePersonagem;
	private ArrayList<String> habilidades;
	private Boolean statusPersonagem; // SE O PERSONAGEM JA FOI ESCOLHIDO OU NAO	
	private double tempoVida;
	
/*-----------------------------------------------------METODO CONSTRUTOR INICIO------------------------------------------------------------------------------------------------------------------*/
	// O CONSTRUTOR É UM METODO ESPECIAL QUE É CHAMADO TODA VEZ QUE VOCÊ INICIALIZA OU CRIA UM OBJETO DESSA CLASSE
	Personagem(String idPersonagem, String nomePersonagem, ArrayList<String> habilidades, boolean statusPersonagem, double tempoVida) {
		this.idPersonagem = idPersonagem;
		this.nomePersonagem = nomePersonagem;
		this.habilidades = habilidades;
		this.statusPersonagem = statusPersonagem;
		this.tempoVida = tempoVida;
		
		
	}
/*-----------------------------------------------------METODO CONSTRUTOR FIM---------------------------------------------------------------------------------------------------------------------*/
/*-----------------------------------------------------METODOS PERSONAGEM INICIO-----------------------------------------------------------------------------------------------------------------*/
		
	
	public void usarHabilidade() { // METODO USAR HABILIDADE INICIO
		
	}
	
	
	
	
/*-----------------------------------------------------METODO CONSTRUTOR FIM---------------------------------------------------------------------------------------------------------------------*/
/*-----------------------------------------------------METODOS GET INICIO------------------------------------------------------------------------------------------------------------------------*/
	public String getidPersonagem() {
		return this.idPersonagem;
	}
	
	public String getnomePersonagem() {
		return this.nomePersonagem;
	}
	
	public Boolean getstatusPersonagem() { // DEPENDE DA CLASSE ENUM Status
		return this.getStatusPersonagem();
	}
	
	public String gethabilidades() { // DEPENDE DA CLASSE ENUM HABILIDADES
		return this.habilidades;
	}
	
	public double gettempoVida() {
		return this.tempoVida;
	}
	

/*-----------------------------------------------------METODOS SET INICIO------------------------------------------------------------------------------------------------------------------------*/
	
	public void setidPersonagem(String idPersonagem) {
		this.idPersonagem = idPersonagem;
	}
	
	public void setnome(String NomePersonagem) {
		this.nomePersonagem = NomePersonagem;
	}
	
	public void settempoVida() {
		this.tempoVida = 100.0;
	}


	public Boolean getStatusPersonagem() {
		return statusPersonagem;
	}


	public void setStatusPersonagem(Boolean statusPersonagem) {
		this.statusPersonagem = statusPersonagem;
	}
	
	
	
	
}

